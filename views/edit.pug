head
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  link(rel="stylesheet", href="../static/css/bulma.css")
body
  .columns.is-gapless
    .column.is-one-quarter.is-paddingless.is-hidden-mobile
      header.hero.is-dark.is-bold
        .hero-body
          .container
            .span
              i.fas.fa-arrow-left.fa-2x
            h1.title= title
            h2.subtitle= subtitle
      aside.menu
        p.menu-label ADMINISTRACION
        ul.menu-list
          li
            a(href="#")
              span.icon.is-large
                i.fas.fa-building.fa-2x
              span Empresa
          li
            a(href="#")
              span.icon.is-large
                i.fas.fa-cubes.fa-2x
              span Modulos
          li
            a(href="http://localhost:4000/users")
              span.icon.is-large
                i.fas.fa-users.fa-2x
              span Usuarios
          li
            a(href="#")
              span.icon.is-large
                i.fas.fa-lock.fa-2x
              span Permisos
          li
            a(href="#")
              span.icon.is-large
                i.fas.fa-id-card.fa-2x
              span Perfiles 
    .column
      header.hero.is-primary.is-bold
        .hero-body
          .container
            .span
              i.fas.fa-arrow-left.fa-2x
            h1.title= title
            h2.subtitle= subtitle
      .container
        .card
          .card-header= title
          .card-content
            .field
              label.label Nombre
            .control
              input.input(type="text" placeholde="Ingrese un nombre" value=user.name)
  script(src="../static/js/fontawesome-all.js")      